@using System;
@using System.Collections.Generic;
@using MadLibs.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MadLibs!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
  <div class="container">
    <h1>My MadLib Application</h1>
    <br>
    <p>Fill in the following.</p>

    
    <form action="/game/selfStory" method="post">

        <label for="myNoun">Enter a noun name</label>
        <input id="myNoun" name="myNoun" type="text" required placeholder="e.g: bola">

        <br>
        <br>
        <label for="myVerb">Enter a verb</label>
        <input id="myVerb" name="myVerb" type="text" required placeholder="e.g: run">

        <br>
        <br>
        <label for="myAdjective">Enter a colour adjective</label>
        <input id="myAdjective" name="myAdjective" type="text" required placeholder="e.g: purple">
        
        <br>
        <br>
        <label for="myAdverb">Enter an adverb</label>
        <input id="myAdverb" name="myAdverb" type="text" required placeholder="e.g: regularly">
        
        <br>
        <br>
        <label for="myExclammation">Enter an exclammation</label>
        <input id="myExclammation" name="myExclammation" type="text" required placeholder=" e.g: !!!">

        <br>
        <br>
      <button class="btn btn-secondary" type="submit">Submit</button>
    </form>
    </div>
  </body>
</html>